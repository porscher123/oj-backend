<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxc.oj.mapper.SubmissionMapper">

    <resultMap id="BaseResultMap" type="com.wxc.oj.model.po.Submission">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="problemId" column="problem_id" jdbcType="BIGINT"/>
            <result property="sourceCode" column="source_code" jdbcType="VARCHAR"/>
            <result property="submissionResult" column="submission_result" jdbcType="VARCHAR"/>
            <result property="language" column="language" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
            <result property="statusDescription" column="status_description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,problem_id,
        source_code,submission_result,
        language, create_time,update_time,is_deleted,status,statusDescription
    </sql>

    <select id="getStatusDistribution"
            resultType="com.wxc.oj.model.vo.problem.SubmissionStatusCount">
        SELECT
        status_description AS status,
        COUNT(*) AS count
        FROM
        submission
        WHERE
        is_deleted = 0
        AND problem_id = #{problemId}  <!-- 添加题目ID筛选 -->
        GROUP BY
        status_description
        ORDER BY
        count DESC
    </select>
</mapper>
